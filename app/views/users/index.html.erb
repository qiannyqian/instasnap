<div class="search-users">
  <%= form_tag(users_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Users" %>
    <%= submit_tag "Search" %>
  <% end %>

  <% if @users.present? %>
    <%= render partial: 'user' %>
  <% else %>
    <p>There are no users matching the term(s) <%= params[:search] %>.</p>
  <% end %>
</div>
