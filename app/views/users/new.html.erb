<section class="users new">
  <div class="content">
    <div class="new-signup-form">
      <%= form_for(:user, url: users_path, method: :post) do |f| %>
        <h1 class="text-center">Sign Up</h1>
        <br>
        <div class="form-group">
          <h4><%= f.label :email_field, "Email", class: '' %></h4>
          <%= f.email_field :email, required: true, id: "user_email_field", class: "form-control" %>
        </div>

        <div class="form-group">
          <h4><%= f.label :username, "Username", class: '' %></h4>
          <%= f.text_field :username, required: true, id: "user_username_field", class: 'form-control' %>
        </div>

        <div class="form-group">
          <h4><%= f.label :password_field, "Password", class: '' %></h4>
          <%= f.password_field :password, required: true, id: "user_password_field", class: 'form-control'%>
        </div>

        <div class="form-group text-center">
          <%= f.submit "Sign me up!", class: 'btn btn-primary' %>
        </div>
    </div>

    <% end %>

    <h5 class="text-center">
      <%= link_to image_tag('https://i.stack.imgur.com/Vk9SO.png'), "/auth/facebook" %>
      <br><br>
      <%= link_to "Return home", root_path, class: '' %>
    </h5>
  </div>
</section>
