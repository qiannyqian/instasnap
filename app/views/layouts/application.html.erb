<!DOCTYPE html>
<html>
  <head>
    <title>Instasnap</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="navbar">
      <%= link_to "Home", root_path, class: '' %>
      <% if current_user %>
        <%= current_user.username %>
        <%= link_to "New Photo", new_photo_path %>
        <%= link_to "Logout", "/sessions", class: 'button btn-info text-center', method: :delete %>
      <% else %>
        <div class="buttons">
          <%= link_to "Sign Up", new_user_path, class: 'button btn-primary text-center' %>
          <%= link_to "Log In", new_sessions_path, class: 'button btn-info text-center' %>
        </div>
      <% end %>
    </div>

    <%= yield %>
  </body>
</html>
